{
  "manifest_version": 3,
  "name": "SmartPage",
  "version": "1.0",
  "description": "SmartPage uses ChatGPT to analyze and summarize web content based on your prompt.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "smartpage.html",
    "default_icon": {
      "32": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}